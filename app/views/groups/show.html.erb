<p></p>
<div class="container ps-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', nbook: @nbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group Detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @group.get_group_image(80,80) %></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% if current_user.id == @group.owner_id %>
                <%= link_to(edit_group_path(@group.id)) do %>
                  <button class="btn"><i class="fas fa-cog"></i>Edit</button>
                <% end %>
                <%= link_to(group_new_mail_path(@group)) do %>
                  <button class="btn"><i class="far fa-envelope"></i>Notice an Event</button>
                <% end %>
              <% elsif @group.users.include?(current_user) %>
                <%= link_to "Leave this group", group_path(@group), method: :delete, class:'btn btn-sm btn-warning' %>
              <% else%>
                <%= link_to "Join this group", group_join_path(@group), class:'btn btn-sm btn-info' %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <br>
      <h4>Group Users</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>name</th>
            <th>introduction</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50) %></td>
              <td>
                <%= link_to(user_path(user.id)) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
