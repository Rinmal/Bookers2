<p></p>
<div class="container ps-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', nbook: @nbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group Detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @group.get_group_image(80,80) %></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% if current_user.id == @group.owner_id %>
                <%= link_to "Edit", edit_group_path(@group.id), class: 'btn btn-success' %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <br>
      <h4>Group Users</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>name</th>
            <th>introduction</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50) %></td>
              <td>
                <%= link_to(user_path(user.id)) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
