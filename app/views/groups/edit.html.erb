<p></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Group</h1>
      <%if @group.errors.any? %>
        <h3><%= @group.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%=form_with model: @group do |f| %>
        <div class="form-group">
          <label for="name">グループ名</label>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="introduction">紹介文</label>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Group', class: 'btn btn-info' %>
        </div>
      <% end %>
      <%= link_to "Show", group_path %>
      |
      <%= link_to "Back", groups_path %>
    </div>
  </div>
</div>
