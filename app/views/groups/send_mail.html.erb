<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-5 mx-auto">
      <h2 class="mb-2">Mail was sended successfully</h2>
      <div class="mt-3">
        -Title-
        <p class="font-weight-bold">　<%= @mail_title %></p>
      </div>
      <div>
        -Content-
        <p class="font-weight-bold">　<%= safe_join(@mail_content.split("\n"),tag(:br)) %></p>
      </div>
      <div class="text-right">
        <%= link_to "Back", group_path(@group), class:'btn' %>
      </div>
    </div>
  </div>
</div>