<p></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Create Group</h1>
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <label for="name">グループ名</label>
          <%= f.text_field :name, class:'form-control' %>
        </div>
        <div class="form-group">
          <label for="introduction">紹介文</label>
          <%= f.text_field :introduction, class:'form-control' %>
        </div>
        <div class="form-group">
          <label for="group_image">グループ画像</label>
          <%= f.file_field :group_image, accept: "image/*", class: 'form-control-file' %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Group", class:'btn btn-info' %>
      <% end %>
    </div>
  </div>
</div>
