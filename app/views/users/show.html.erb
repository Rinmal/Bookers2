<%= flash[:notice] %>
<h1>Users#show</h1>

<%= render 'user', user: @user %>
<%= render 'books/book', nbook: @nbook %>

<!--Userの投稿一覧-->
<% @books.each do |book| %>
  <div>
    <%= link_to(user_path(book.user.id)) do %>
      <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>

    <%= link_to(book_path(book.id)) do %>
      <p><%= book.title %></p>
    <% end %>

    <p>Opinion: <%= book.body %></p>
  </div>
<% end %>
