<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span class='text-white'>Bookers</span>
          </a>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in?%>
              <!--マイページへのリンクHome-->
              <li>
                <%= link_to "Home", user_path(current_user.id), class:'text-white' %>
              </li>
              <!--ユーザー一覧へのリンクUsers-->
              <li>
                <%= link_to "Users", users_path, class:'text-white' %>
              </li>
              <!--投稿一覧へのリンクBooks-->
              <li>
                <%= link_to "Books", books_path, class:'text-white' %>
              </li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class:'text-white' %>
              </li>
            <% else %>
            <br>
              <!--Homes#TopへのリンクHome-->
              <li>
                <%= link_to "Home", root_path, class:'text-white' %>
              </li>
              <!--アバウトページへのリンクAbout-->
              <li>
                <%= link_to "About", home_about_path, class:'text-white' %>
              </li>
              <li>
                <%= link_to "Sign up", new_user_registration_path, class:'text-white' %>
              </li>
              <li>
                <%= link_to "Log in", new_user_session_path, class:'text-white' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
