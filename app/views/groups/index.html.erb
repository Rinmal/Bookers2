<p></p>
<div class="container ps-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', nbook: @nbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Groups</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= image_tag group.get_group_image(80,80) %></td>
              <td>
                <%= link_to(group_path(group.id)) do %>
                  <%= group.name %>
                <% end %>
              </td>
              <td><%= group.introduction %></td>
              <td><i class="fas fa-user"></i><%= group.users.count %></td>
              <td>
                <% if current_user.id == group.owner_id %>
                  <%= link_to(edit_group_path(group.id)) do %>
                    <button class="btn"><i class="fas fa-cog"></i></button>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
