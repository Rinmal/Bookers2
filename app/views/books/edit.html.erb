<h1>Books#edit</h1>

<h3>Editing Book</h3>
<%if @book.errors.any? %>
  <%= @book.errors.count %>件のエラー
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%=form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_field :body %>

  <%= f.submit 'Update Book' %>
<% end %>